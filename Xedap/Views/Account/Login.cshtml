
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutAuthen.cshtml";
}
<link href="~/Content/StyleSheet.css" rel="stylesheet" />


<div class="login-box ">
    <div class="login-snip">
        <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Login</label> <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Sign Up</label>
        <div class="login-space">
            <form action="/" method="post" id="login">
                <div class="login">
                    <div class="group">
                        <label for="user" class="label">Username</label>
                        <input id="user" type="text" class="input" placeholder="Enter your username" name="UserName">
                    </div>
                    <div class="group">
                        <label for="pass" class="label">Password</label>
                        <input id="pass" type="password" class="input" data-type="password" placeholder="Enter your password" name="Pass">
                    </div>
                    <div class="group">
                        <input id="check" type="checkbox" class="check" checked> <label for="check">
                            <span class="icon"></span> Keep me Signed in
                        </label>
                    </div>
                    <div class="group">
                        <button class="button">Login</button>
                    </div>
                    <div class="hr"></div>
                    <div class="foot"> <a href="#">Quên mật khẩu</a> </div>
                    <div class="foot"><a href="#">Về trang chủ</a></div>

                </div>
            </form>
            <form action="/" method="post" id="signin">
                <div class="sign-up-form">
                    <div class="group">
                        <label for="userSignIn" class="label">Username</label>
                        <input id="userSignIn" type="text" class="input" name="UserName" placeholder="Create your Username">
                    </div>
                    <div class="group">
                        <label for="passSignIn" class="label">Password</label>
                        <input id="passSignIn" type="password" class="input" name="Pass" data-type="password" placeholder="Create your password">
                    </div>
                    <div class="group">
                        <label for="rePassSignIn" class="label">Repeat Password</label>
                        <input id="rePassSignIn" type="password" name="RePass" class="input" data-type="password" placeholder="Repeat your password">
                    </div>
                    <div class="group">
                        <label for="emailSignIn" class="label">Email Address</label>
                        <input id="emailSignIn" type="text" name="Email" class="input" placeholder="Enter your email address">
                    </div>
                    <div class="group">
                        <button class="button">Sign Up</button>
                    </div>
                    <div class="hr"></div>
                    <div class="foot"><a href="#">Đã có tài khoản</a></div>
                    <div class="foot"><a href="#">Về trang chủ</a></div>

                </div>
            </form>
        </div>
    </div>
</div>

@section scripts{
    
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script>
        jQuery.validator.addMethod("userRegEx", function (value, element) {
            var regex = /^[a-zA-Z0-9]{1,}$/g.test(value);
            return this.optional(element) || regex
        });
        jQuery.validator.addMethod("domainEmail", function (value, element) {
            var filter = /^[a-zA-Z0-9.!#$%&'*+\/=?^_`{|}~-]+@@[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])*(?:\.[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?)+(.)+$/.test(value);
            return this.optional(element) || filter
        });
