
@model Xedap.Models.Product
<div class="modal-body">
    <div class="modal-product-name">
        <label for="text-tickets" class="modal-label">
            Tên Sản Phẩm
        </label>
        <input type="text" class="modal-input" placeholder="Name" name="productName" value="@Html.Raw(Model.Name)">
        <input type="hidden" name="proID" value="@Model.IDProduct" />
    </div>
    <div class="modal-product-price">
        <label for="text-tickets" class="modal-label">
            Giá Cả (VND)
        </label>
        <input type="text" class="modal-input" placeholder="Price" name="productPrice" value=">@String.Format("{0:0,0}", Model.Price) VND">
    </div>

    <div class="modal-product-stock">
        <label for="text-tickets" class="modal-label">
            Số Lượng
        </label>
        <input type="text" class="modal-input" placeholder="Stock" name="productStock" value="@Model.Stock">
    </div>
    <div class="modal-product-description">
        <label for="text-tickets" class="modal-label">
            Thông Tin Chi Tiết
        </label>
        <textarea name="productDes" cols="80" rows="5" style="min-width:100%">@Html.Raw(Model.Description)"</textarea>
    </div>
    <div class="">
        <label for="text-tickets" class="modal-label">
            Chọn Danh Mục Cho Sản Phẩm
        </label>
        <select name="cttr" id="CategoryList" class="form-control" onfocus='this.size=5;' onblur='this.size=1;' onchange='this.size=1; this.blur();' style="max-width:50%">
            <option value="" Selected disabled hidden>Choose the Category</option>
            @foreach (var item in ViewBag.Categories)
            {
                <option value="@item.IDCategory">@item.CategoryName</option>

            }
        </select>
    </div>

    <div class="form-group upload-form" id="uploadForm" style="margin-top:20px">
        <h4>Sửa ảnh</h4>
        <input type="file" name="UploadEdit" class="form-control-file" id="UploadEdit" accept=".jpg, .jpeg, .png">
    </div>
    
    <div class="add-attribute row" style="max-height:200px">
        <table class="table table-bordered">
            <thead class="bg-dark" style="color:white">
                <tr>
                    <td class="col-8">Tên Thuộc Tính</td>
                    <td class="col-4">Giá Trị</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.ValueAttributes)
                {
                    <tr>
                        <td>@item.AttributeName</td>
                        <td>

                            <input id="enter-value" name="productAttr1" type="text" placeholder="Default Value"  value="@item.AttributeValue">
                            <input type="hidden" name="attrID" value="@item.IDAttribute" />


                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
<footer class="modal-footer">
    <button class="buy-tickets save">
        <i class="fas fa-check"></i>
        LƯU THAY ĐỔI
    </button>
</footer>