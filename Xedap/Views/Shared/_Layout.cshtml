
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css" integrity="sha512-10/jx2EXwxxWqCLX/hHth/vu2KY3jCF70dCQB8TSgNjbCVAC/8vai53GfMDrO2Emgwccf2pJqxct9ehpzG+MTw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/js/all.min.js" crossorigin="anonymous"></script>
</head>
<body>
        <div id="header" style="position:fixed;top:0;">
            <ul id="nav">
                <li><a href="#"><img src="~/Content/Image/Free_Sample_By_Wix.jpg" style="width:70%" /></a></li>
                <li><a href="">Home</a></li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a href="/Account/Index">Thông tin tài khoản</a></li>
                    <li><a href="/Account/Logout">Đăng xuất</a></li>
                }
                else
                {
                    <li><a href="/Account/Login">Đăng nhập/Đăng kí</a></li>
                    <li><a href="">Contact</a></li>
                }
                <li>
                    <a href="">
                        Sản phẩm
                        <i class="fa fa-caret-down" aria-hidden="true" style="color:white;"></i>
                    </a>
                    <div class="subnav">
                        <div class="nav-column">
                            <a class="nav-header" href="">Xe đạp</a>
                            <div class="border-nav"></div>
                            @{
                                Html.RenderAction("SubNav", "Partial");
                            }
                        </div>
                    </div>
                </li>

            </ul>
            <a class="cart" href="/account/cart"><i class="fa fa-shopping-cart" aria-hidden="true"></i></a>
        </div>
        <div style="margin-top:150px">
            <div class="container">
                @RenderBody()
            </div>
        </div>
    <div class="footer">
        <div class="footer-1">
            <div class="footer-content">
                <div class="nav-column">
                    <a class="nav-header" href="">Chính sách</a>
                    <div class="border-nav"></div>
                    <div style="padding-bottom:20px"></div>
                    <a class="navitem" href="">Chính sách bảo mật thông tin</a>
                    <a class="navitem" href="">Chính sách dbrr</a>
                </div>
            </div>
            <div class="footer-content">
                <div class="nav-column">
                    <div style="padding-top:30px"></div>
                    <a class="nav-header" href="">Công ty</a>
                    <div class="border-nav"></div>
                    <div style="padding-bottom:20px"></div>
                    <a class="navitem" href="">Giới thiệu</a>
                    <a class="navitem" href="">Liên hệ</a>
                </div>
            </div>
            <div class="footer-content" style="padding-top:-30px">
                <div class="nav-column">
                    <a class="nav-header" href="">Kết nối</a>
                    <div class="border-nav"></div>
                    <div style="padding-bottom:20px"></div>
                    <a class="navitem" href="https://github.com/RioRichard/XedapTeyvat"><img width="35" src="https://cdn3.iconfinder.com/data/icons/inficons/512/github.png"/></a>
                    <div style="padding-bottom:20px"></div>
                </div>
            </div>
        </div>
        <div class="footer-1 footer-2" style="background-color: #a3e2ff; ">
            <div class="footer-content">
                <div class="nav-column">
                    <div class="navitem">Email:</div>
                </div>
            </div>
            <div class="footer-content" style="margin-top: 20px">
                <div class="nav-column">
                    <div class="navitem" style="font-weight:bold;font-size:25px;">Công ty Paimon</div>
                    <div class="navitem">Sản phẩm thuộc đồ án Lập Trình Web</div>
                </div>
            </div>
            <div class="footer-content" style="padding-top:-30px">
                <div class="nav-column">
                    <div class="navitem" style="font-size:20px">Copyright © by Nhóm 4</div>
                </div>
            </div>
        </div>
    </div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)

</body>
</html>
