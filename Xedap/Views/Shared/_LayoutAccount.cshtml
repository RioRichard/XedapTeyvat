
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Xe đạp TeyVat</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/admincss.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css" integrity="sha512-10/jx2EXwxxWqCLX/hHth/vu2KY3jCF70dCQB8TSgNjbCVAC/8vai53GfMDrO2Emgwccf2pJqxct9ehpzG+MTw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        .modal, .modalver2 {
            position: fixed;
            top: 0;
            right: 0;
            left: 0;
            bottom: 0;
            background-color: rgba(0, 0, 0, 0.3);
            align-items: center;
            justify-content: center;
            display: none;
        }

            .modal .modal-container {
                background-color: white;
                width: 60%;
                max-width: calc(100%-32px);
                min-height: 200px;
                position: relative;
                overflow-y: initial !important;
            }

        .modal-header {
            background-color: #009688;
            height: 130px;
            align-items: center;
            justify-content: center;
            font-size: 30px;
            line-height: 65px;
            color: white;
        }

        .ti-bag {
            margin: 12px;
        }

        .close, .closever2 {
            position: absolute;
            right: 0;
            top: 0;
            color: white;
            padding: 15px;
            cursor: pointer;
        }

            .close:hover {
                color: black;
                background-color: #ccc;
            }

        .modal-body {
            padding: 15px;
            height: 80vh;
            overflow-y: auto;
            max-height: 600px
        }

        .modal-label {
            display: block;
            margin-top: 15px;
            margin-bottom: 5px;
            font-size: 16px;
        }

        .modal-input {
            padding: 8px;
            width: 100%;
            font-size: 15px;
        }

        .buy-tickets {
            width: 100%;
            padding: 16px;
            background-color: #009688;
            margin: 16px 0;
            align-items: center;
            justify-content: center;
            border: none;
            color: white;
            cursor: pointer;
        }

            .buy-tickets:hover {
                opacity: 0.8;
            }

        .modal-footer {
            text-align: right;
            padding: 16px;
            border: none;
        }

            .modal-footer a {
                color: #2196f3;
            }

        .modal.open {
            display: flex;
        }

        .modal.close {
            display: none;
        }

        .modalver2.open {
            display: flex;
        }

        .modalver2.close {
            display: none;
        }

        #footer {
        }
    </style>
</head>
<body>
    <header>
        <div id="header" style="position:relative">
            <ul id="nav">
                <li><a href="/"><img src="~/Content/Image/Free_Sample_By_Wix.jpg" style="width:70%" /></a></li>
                <li><a href="/">Home</a></li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a href="/Account/Index">Thông tin tài khoản</a></li>
                    <li><a href="/Auth/Logout">Đăng xuất</a></li>
                }
                else
                {
                    <li><a href="/Account/Login">Đăng nhập/Đăng kí</a></li>
                    <li><a href="">Contact</a></li>
                }
                <li>
                    <a href="">
                        Sản phẩm
                        <i class="fa fa-caret-down" aria-hidden="true" style="color:white;"></i>
                    </a>
                    <div class="subnav">
                        <div class="nav-column">
                            <a class="nav-header" href="">Xe đạp</a>
                            <div class="border-nav"></div>
                            @{
                                Html.RenderAction("SubNav", "Partial");
                            }
                        </div>
                    </div>
                </li>

            </ul>
            <a class="cart" href=""><i class="fa fa-shopping-cart" aria-hidden="true"></i></a>
        </div>
    </header>
    <div>
        <div class="row" style="min-height:100vh">
            <div class="col-2">
                <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                    <div class="sb-sidenav-menu">
                        <div class="nav">
                            <div class="sb-sidenav-menu-heading">Thông tin chung</div>
                            <a class="nav-link" href="/account">
                                <div class="sb-nav-link-icon"><i class="fa-solid fa-user"></i></div>
                                Thông tin tài khoản
                            </a>
                            <a class="nav-link" href="/account/address">
                                <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                Địa chỉ
                            </a>
                            <a class="nav-link" href="/account/ChangePassword">
                                <div class="sb-nav-link-icon"><i class="fa-solid fa-lock"></i></div>
                                Đổi mật khẩu
                            </a>
                            <a class="nav-link" href="/account/cart">
                                <div class="sb-nav-link-icon"><i class="fa-solid fa-cart-shopping"></i></div>
                                Giỏ hàng của bạn
                            </a>
                            <a class="nav-link" href="/account/invoice">
                                <div class="sb-nav-link-icon"><i class="fa-solid fa-receipt"></i></div>
                                Đơn hàng của bạn
                            </a>
                            <a class="nav-link" href="/auth/Logout">
                                <div class="sb-nav-link-icon"><i class="fa-solid fa-right-from-bracket"></i></div>
                                Đăng xuất
                            </a>

                            <div class="collapse" id="collapseLayouts" aria-labelledby="headingOne" data-parent="#sidenavAccordion">
                                <nav class="sb-sidenav-menu-nested nav">
                                    <a class="nav-link" href="layout-static.html">Static Navigation</a>
                                    <a class="nav-link" href="layout-sidenav-light.html">Light Sidenav</a>
                                </nav>
                            </div>
                        </div>
                    </div>
                </nav>
            </div>
            <div class="col-10">
                @RenderBody()
            </div>


        </div>
    </div>

    <div class="footer">
        <div class="footer-1">
            <div class="footer-content">
                <div class="nav-column">
                    <a class="nav-header" href="">Chính sách</a>
                    <div class="border-nav"></div>
                    <div style="padding-bottom:20px"></div>
                    <a class="navitem" href="/home/policysecurity">Chính sách bảo mật</a>
                    <a class="navitem" href="/home/policyrefund">Chính sách đổi trả</a>
                    <a class="navitem" href="/home/ourpolicy">Chính sách nhóm Paimon</a>
                </div>
            </div>
            <div class="footer-content">
                <div class="nav-column">
                    <div style="padding-top:30px"></div>
                    <a class="nav-header" href="">Công ty</a>
                    <div class="border-nav"></div>
                    <div style="padding-bottom:20px"></div>
                    <a class="navitem" href="/home/About">Giới thiệu</a>
                    <a class="navitem" href="/home/Contact">Liên hệ</a>
                </div>
            </div>
            <div class="footer-content" style="padding-top:-30px">
                <div class="nav-column">
                    <a class="nav-header" href="">Kết nối</a>
                    <div class="border-nav"></div>
                    <div style="padding-bottom:20px"></div>
                    <a class="navitem" href="https://github.com/RioRichard/XedapTeyvat"><img width="35" src="https://cdn3.iconfinder.com/data/icons/inficons/512/github.png" /></a>
                    <div style="padding-bottom:20px"></div>
                </div>
            </div>
        </div>
        <div class="footer-1 footer-2" style="background-color: #a3e2ff; ">
            <div class="footer-content">
                <div class="nav-column">
                    <div class="navitem">Email:</div>
                </div>
            </div>
            <div class="footer-content" style="margin-top: 20px">
                <div class="nav-column">
                    <div class="navitem" style="font-weight:bold;font-size:25px;">Công ty Paimon</div>
                    <div class="navitem">Sản phẩm thuộc đồ án Lập Trình Web</div>
                </div>
            </div>
            <div class="footer-content" style="padding-top:-30px">
                <div class="nav-column">
                    <div class="navitem" style="font-size:20px">Copyright © by Nhóm 4</div>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
